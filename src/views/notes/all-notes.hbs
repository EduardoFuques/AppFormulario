<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="#"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <div class="form-group mb-2">
                    <div class="d-grid">
                        <button class="btn btn-danger btn-sm" type="button">Borrar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{/each}}
</div>